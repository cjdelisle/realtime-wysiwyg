{{velocity output="none"}}
#set($lazy = false)
#wysiwyg_import($lazy)
$xcontext.
{{/velocity}}

{{html clean=false}}
<style>
.xRichTextEditor {
    margin-left: auto;
    margin-right: auto;
}
</style>
<input type="text" style="width:100%" id="realtime-user-list" />
<textarea id="realtime_wysiwyg_demo" style="height:385px; width:100%;" cols="0" rows="0">Realtime Wysiwyg Editor</textarea>
<script type="text/javascript">

// to please the realtime plugin
window.XWiki.contextaction = 'edit';

document.observe('xwiki:dom:loaded', function () {
    Wysiwyg.onModuleLoad(function() {
        new WysiwygEditor({hookId:'realtime_wysiwyg_demo'});
    });
});

document.observe('xwiki:wysiwyg:created', function(event) {
    document.fire('xwiki:wysiwyg:showWysiwyg');
});

</script>
{{/html}}
